<style>
style>
.equipment-show-main-content {
  max-width: 1000px;
  margin: 0 auto;
  padding: 30px;
  font-family: 'Segoe UI', sans-serif;
  background-color: #fafafa;
}

.equipment-show-header {
  text-align:left;
}

.equipment-show-header h1,
.equipment-show-main-content h2 {
  color: #333;
  margin-bottom: 20px;
}

.equipment-show-hr {
  margin: 40px 0 20px;
  border: none;
  border-top: 1px solid #ddd;
}

.equipment-show-btn-back {
  background: none;
  color: #0066cc;
  text-decoration: none;
  font-weight: bold;
}

.equipment-show-btn {
  background-color: #007bff;
  border: none;
  color: white;
  padding: 8px 16px;
  margin-left: 10px;
  text-decoration: none;
  border-radius: 4px;
  cursor: pointer;
}

.equipment-show-btn:hover {
  background-color: #0056b3;
}

.equipment-show-btn-secondary {
  background-color: #6c757d;
  color: white;
  padding: 8px 14px;
  text-decoration: none;
  border-radius: 4px;
  margin-left: 10px;
}

.equipment-show-btn-secondary:hover {
  background-color: #5a6268;
}


.equipment-show-info-wrapper {
  display: flex;
  gap: 20px;
  align-items: flex-start;
  margin-bottom: 30px;
}

.equipment-show-image-container {
  flex: 0 0 auto;
}

.equipment-show-info-image {
  width: 250px;
  height: auto;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 4px;
  background-color: #fff;
}

.equipment-show-info-table {
  flex: 1;
  width: 100%;
  border-collapse: collapse;
  background: white;
  box-shadow: 0 0 4px rgba(0, 0, 0, 0.1);
}

.equipment-show-info-table th,
.equipment-show-info-table td {
  padding: 12px 16px;
 border: 1px solid #878787;
  text-align: left;
}

.equipment-show-info-table th {
  background-color: #f5f5f5;
  width: 200px;
  color: #555;
}

.equipment-show-filter-form {
  margin-bottom: 20px;
}

.equipment-show-form-row {
  display: flex;
  gap: 10px;
  align-items: center;
  flex-wrap: wrap;
}

.equipment-show-form-select {
  padding: 6px 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.equipment-show-logs-table {
  width: 100%;
  border-collapse: collapse;
  background: white;
  box-shadow: 0 0 4px rgba(0,0,0,0.1);
}

.equipment-show-logs-table th,
.equipment-show-logs-table td {
  padding: 12px 16px;
  text-align: left;
  border: 1px solid #878787;
  text-align:center;
}

.equipment-show-logs-table th {
  background-color: #f1f1f1;
  color: #555;
}

</style>
<div class="main-content">
  <div class="equipment-show-header">
    <div><%= link_to '← Back to list', equipments_path, class: 'equipment-show-btn-back' %></div>
    <div style="display:flex; justify-content:space-between;align-items: baseline;">
    <h1>Equipment Details</h1>
    <% if current_user&.has_permission?('edit_equipment') %>
      <div><%= link_to 'Edit', edit_equipment_path(@equipment), class: 'equipment-show-btn' %></div>
    <% end %>
    </div>
  </div>

  <div class="equipment-show-info-wrapper">
    <table class="equipment-show-info-table">
      <tr><th>Name</th><td><%= @equipment.name %></td></tr>
      <tr><th>Tag</th><td><%= @equipment.tag %></td></tr>
      <tr><th>Brand</th><td><%= @equipment.brand %></td></tr>
      <tr><th>Model</th><td><%= @equipment.model %></td></tr>
      <tr><th>Serial Number</th><td><%= @equipment.serial_number %></td></tr>
      <tr><th>Equipment Type</th><td><%= @equipment.equipment_type %></td></tr>
      <tr><th>Purchase Date</th><td><%= @equipment.purchase_date&.strftime("%Y-%m-%d") %></td></tr>
      <tr><th>Remarks</th><td><%= @equipment.remarks %></td></tr>
      <tr><th>Last Calibration Date</th><td><%= @equipment.last_calibration_date&.strftime("%Y-%m-%d") %></td></tr>
      <tr><th>Calibration Frequency (Days)</th><td><%= @equipment.calibration_frequency_days %></td></tr>
    </table>

    <div class="equipment-show-image-container">
    </div>
  </div>

</div>
