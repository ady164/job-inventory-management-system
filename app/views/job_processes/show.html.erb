                    &nbsp;<%= @job.part_name %>
              <% else %>
                    &nbsp;<%= @job.part_model %> <%= @job.part_type %>
              <% end %>
              </td>
              <td><b>Base Material:</b> <%= @job.base_material %></td>
              <td><b>Filter Material:</b> 
              <% if @job.filler_material.present? %>
                    &nbsp;<%= @job.filler_material %>
              <% else %>
                    &nbsp;N/A
              <% end %>
              </td>
            </tr>
          </table>
        </div>
